{
  "name": "@sta-podcast/website-helpers",
  "version": "0.0.6",
  "description": "A collection of tools useful for making the Sense Think Act Podcast website.",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "build:esm": "tsc --project ./tsconfig.esm.json",
    "build:tests": "tsc --project ./tsconfig.tests.json",
    "build:types": "tsc --project ./tsconfig.types.json",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "lint": "eslint src --ignore-path .gitignore --max-warnings 0",
    "prettier": "npx prettier --ignore-path .gitignore \"**/*.(js|jsx|json|yml|yaml|css|ts|tsx|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "test": "npx jest",
    "validate": "npm run lint && npm run check-format && npm run test"
  },
  "files": [
    "dist/*"
  ],
  "author": "Audrow Nash",
  "contributors": [
    "Audrow Nash <audrow@hey.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/audrow/sta-website-helpers"
  },
  "keywords": [
    "podcast",
    "rss",
    "yaml",
    "typescript",
    "nodejs"
  ],
  "homepage": "https://github.com/audrow/sta-website-helpers",
  "bugs": {
    "mail": "audrow@hey.com",
    "url": "https://github.com/audrow/sta-website-helpers/issues"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/proper-url-join": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "podcast": "^2.0.0",
    "proper-url-join": "^2.1.1",
    "yaml": "^1.10.2"
  }
}
